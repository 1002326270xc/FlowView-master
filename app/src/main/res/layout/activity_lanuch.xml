<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/text_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文字式FlowLayout" />

    <Button
        android:id="@+id/diff_height_text_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="不同高度文字式FlowLayout" />

    <Button
        android:id="@+id/diff_height_text_flow_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="不同高度文字式FlowLayout居中显示" />

    <Button
        android:id="@+id/line_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="规定行数的FlowLayout" />

    <Button
        android:id="@+id/scroll_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自带滑动的FlowLayout" />

</LinearLayout>